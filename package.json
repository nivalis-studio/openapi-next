{
	"name": "@nivalis/openapi-next",
	"type": "module",
	"version": "2.0.0-beta.2",
	"description": "Route wrappers for Next.js",
	"license": "MIT",
	"packageManager": "pnpm@10.23.0",
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/nivalis-studio/openapi-next#readme",
	"repository": {
		"url": "git+https://github.com/nivalis-studio/openapi-next.git"
	},
	"bugs": {
		"url": "https://github.com/nivalis-studio/openapi-next/issues"
	},
	"bin": {
		"openapi-next": "dist/cli/index.mjs"
	},
	"scripts": {
		"dev": "bun run --watch src/index.tsx",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"test": "bun test",
		"build": "zshy",
		"prepack": "zshy",
		"prepare": "lefthook install",
		"ts": "tsc --noEmit --incremental"
	},
	"dependencies": {
		"@nivalis/std": "2.0.0",
		"es-toolkit": "1.42.0",
		"openapi-types": "12.1.3",
		"prettier": "3.6.2",
		"qs": "6.14.0",
		"zod": "4.1.12"
	},
	"peerDependencies": {
		"next": "^16.0.3",
		"typescript": "^5.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.7",
		"@commitlint/cli": "20.1.0",
		"@commitlint/config-conventional": "20.0.0",
		"@nivalis/biome-config": "2.3.7",
		"@total-typescript/ts-reset": "0.6.1",
		"@types/bun": "1.3.3",
		"@types/node": "22.2.0",
		"lefthook": "2.0.4",
		"typescript": "5.9.3",
		"zshy": "0.6.0",
		"@types/qs": "6.14.0",
		"next": "16.0.3"
	},
	"zshy": "./src/index.ts",
	"files": ["dist"],
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.cts",
	"exports": {
		".": {
			"types": "./dist/index.d.cts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	}
}
