{
	"name": "@nivalis/openapi-next",
	"type": "module",
	"version": "1.0.0-beta.9",
	"description": "Route wrappers for Next.js",
	"publishConfig": {
		"access": "public",
		"provenance": false
	},
	"homepage": "https://github.com/nivalis-studio/openapi-next#readme",
	"repository": {
		"url": "git+https://github.com/nivalis-studio/openapi-next.git"
	},
	"bugs": {
		"url": "https://github.com/nivalis-studio/openapi-next/issues"
	},
	"license": "MIT",
	"packageManager": "pnpm@10.23.0",
	"bin": {
		"openapi-next": "dist/cli/index.mjs"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"LICENSE",
		"README.md",
		"dist"
	],
	"scripts": {
		"test": "bun test",
		"build": "unbuild",
		"prepublishOnly": "unbuild",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"ts": "tsc",
		"prepare": "lefthook install"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"@nivalis/biome-config": "0.1.3",
		"@total-typescript/ts-reset": "0.6.1",
		"@types/bun": "1.2.22",
		"@types/qs": "6.14.0",
		"lefthook": "1.13.0",
		"unbuild": "3.6.1"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"unbuild": {
		"rollup": {
			"esbuild": {
				"target": "node22",
				"minify": true
			}
		},
		"declaration": true,
		"clean": true,
		"failOnWarn": false,
		"exports": "named",
		"preserveModules": true,
		"sourcemap": true
	},
	"dependencies": {
		"@nivalis/std": "^2.0.0",
		"es-toolkit": "1.39.10",
		"next": "^15.5.3",
		"openapi-types": "12.1.3",
		"prettier": "^3.6.2",
		"qs": "^6.14.0",
		"zod": "^4.1.9"
	}
}
