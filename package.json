{
	"name": "@nivalis/openapi-next",
	"type": "module",
	"version": "2.0.0-beta.1",
	"description": "Route wrappers for Next.js",
	"publishConfig": {
		"access": "public",
		"provenance": false
	},
	"homepage": "https://github.com/nivalis-studio/openapi-next#readme",
	"repository": {
		"url": "git+https://github.com/nivalis-studio/openapi-next.git"
	},
	"bugs": {
		"url": "https://github.com/nivalis-studio/openapi-next/issues"
	},
	"license": "MIT",
	"packageManager": "pnpm@10.23.0",
	"bin": {
		"openapi-next": "dist/cli/index.mjs"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": ["LICENSE", "README.md", "dist"],
	"scripts": {
		"test": "bun test",
		"build": "unbuild",
		"prepublishOnly": "unbuild",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"ts": "tsc",
		"prepare": "lefthook install"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.7",
		"@commitlint/cli": "20.1.0",
		"@commitlint/config-conventional": "20.0.0",
		"@nivalis/biome-config": "2.3.7",
		"@total-typescript/ts-reset": "0.6.1",
		"@types/bun": "1.3.2",
		"@types/qs": "6.14.0",
		"lefthook": "2.0.4",
		"next": "^16.0.3",
		"unbuild": "3.6.1"
	},
	"peerDependencies": {
		"next": "^16.0.3",
		"typescript": "^5.0.0"
	},
	"unbuild": {
		"rollup": {
			"esbuild": {
				"target": "node22",
				"minify": true
			}
		},
		"declaration": true,
		"clean": true,
		"failOnWarn": false,
		"exports": "named",
		"preserveModules": true,
		"sourcemap": true
	},
	"dependencies": {
		"@nivalis/std": "^2.0.0",
		"es-toolkit": "1.42.0",
		"openapi-types": "12.1.3",
		"prettier": "^3.6.2",
		"qs": "^6.14.0",
		"zod": "^4.1.12"
	}
}
