{
  "name": "@nivalis/openapi-next",
  "type": "module",
  "version": "1.0.0-beta.2",
  "description": "Route wrappers for Next.js",
  "publishConfig": {
    "access": "public",
    "provenance": false
  },
  "homepage": "https://github.com/nivalis-studio/openapi-next#readme",
  "repository": {
    "url": "git+https://github.com/nivalis-studio/openapi-next.git"
  },
  "bugs": {
    "url": "https://github.com/nivalis-studio/openapi-next/issues"
  },
  "license": "MIT",
  "packageManager": "bun@1.2.12",
  "bin": {
    "openapi-next": "dist/cli/index.mjs"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "scripts": {
    "test": "bun test",
    "build": "unbuild",
    "prepublishOnly": "unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "ts": "tsc",
    "prepare": "bunx lefthook install"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@nivalis/eslint-config": "5.1.9",
    "@nivalis/prettier-config": "3.5.3",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/bun": "latest",
    "@types/qs": "^6.9.18",
    "eslint": "9.26.0",
    "lefthook": "1.11.12",
    "lint-staged": "15.5.2",
    "unbuild": "3.5.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*": "eslint --quiet --fix"
  },
  "prettier": "@nivalis/prettier-config",
  "unbuild": {
    "rollup": {
      "esbuild": {
        "target": "node22",
        "minify": true
      }
    },
    "declaration": true,
    "clean": true,
    "failOnWarn": false,
    "exports": "named",
    "preserveModules": true,
    "sourcemap": true
  },
  "dependencies": {
    "@nivalis/std": "2.0.0",
    "@zod/core": "^0.11.6",
    "es-toolkit": "1.37.2",
    "next": "^15",
    "openapi-types": "12.1.3",
    "prettier": "3.5.3",
    "qs": "6.14.0",
    "zod": "^4.0.0-beta.20250505T195954"
  }
}
