{
	"name": "@nivalis/openapi-next",
	"type": "module",
	"version": "2.0.0-beta.2",
	"description": "Route wrappers for Next.js",
	"license": "MIT",
	"packageManager": "pnpm@10.23.0",
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/nivalis-studio/openapi-next#readme",
	"repository": {
		"url": "git+https://github.com/nivalis-studio/openapi-next.git"
	},
	"bugs": {
		"url": "https://github.com/nivalis-studio/openapi-next/issues"
	},
	"bin": {
		"openapi-next": "dist/cli/index.mjs"
	},
	"scripts": {
		"dev": "bun run --watch src/index.tsx",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"test": "bun test",
		"build": "zshy",
		"prepack": "zshy",
		"prepare": "lefthook install",
		"ts": "tsc --noEmit --incremental"
	},
	"dependencies": {
		"@nivalis/std": "catalog:",
		"es-toolkit": "catalog:",
		"openapi-types": "catalog:",
		"prettier": "catalog:",
		"qs": "catalog:",
		"zod": "catalog:"
	},
	"peerDependencies": {
		"next": "^16.0.3",
		"typescript": "^5.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"@commitlint/cli": "catalog:",
		"@commitlint/config-conventional": "catalog:",
		"@nivalis/biome-config": "catalog:",
		"@total-typescript/ts-reset": "catalog:",
		"@types/bun": "catalog:",
		"@types/node": "catalog:",
		"@types/qs": "catalog:",
		"next": "catalog:",
		"lefthook": "catalog:",
		"typescript": "catalog:",
		"zshy": "catalog:"
	},
	"zshy": "./src/index.ts",
	"files": ["dist"],
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.cts",
	"exports": {
		".": {
			"types": "./dist/index.d.cts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	}
}
